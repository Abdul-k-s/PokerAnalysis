<Application x:Class="PokerAnalysis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PokerAnalysis">

    <Application.Resources>
        <ResourceDictionary>

                <ControlTemplate TargetType="Button" x:Key="btnTemplate">
                    <Border Width="18" Height="18" CornerRadius="10" Background="{TemplateBinding Background}" >
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>

                <ControlTemplate TargetType="Button" x:Key="btnTemplate2">
                    <Border Width="60" Height="25" CornerRadius="10" Background="{TemplateBinding Background}" >
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>

                <Style TargetType="Button" x:Key="btn">

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value=".8"/>
                        </Trigger>
                    </Style.Triggers>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="12"/>
                </Style>

            <Style TargetType="ListView" x:Key="LVS">
                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>
            
            <Style TargetType="Button" x:Key="btnS">
                <Setter Property="BorderThickness" Value="5"/>
            </Style>
            <Style TargetType="TextBox" x:Key="tbs">
                <Setter Property="Width" Value="60"/>
            </Style>
            


        </ResourceDictionary>
    </Application.Resources>


</Application>
