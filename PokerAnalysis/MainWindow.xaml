<Window x:Class="PokerAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerAnalysis"
        xmlns:views="clr-namespace:PokerAnalysis.Views"
        xmlns:vms="clr-namespace:PokerAnalysis.ViewModels"
        mc:Ignorable="d"
        Title="PokerAnalysis" Height="520" Width="620" WindowStyle="None" 
        ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">

        
    <Border CornerRadius="25" x:Name="MainBorder">
        <Border.Background>
            <ImageBrush x:Name="img" />
        </Border.Background>
        <Border CornerRadius="25" BorderThickness="3" 
            Background="Black" Opacity="0.8" >
            
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="DarkSlateGray" Offset="0"/>
                    <GradientStop Color="DarkOliveGreen" Offset=".7"/>
                    <GradientStop Color="LightSlateGray" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="15"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Poker Analyst" Foreground= "DarkGray" FontSize="14"
                               FontFamily="Montserrat" Grid.Column="0" VerticalAlignment="Center" Margin="20 0 0 0"/>
                    
                    <Button x:Name="btnMinimize" Background="#28Aeed" Content="-" 
                             Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click" FontSize="12"
                            Style="{StaticResource btn}" Template="{StaticResource btnTemplate}"/>
                    <Button x:Name="btnClose" Background="#DA34AE" Content="X"
                             Cursor="Hand" Grid.Column="2" Click="btnClose_Click"
                            Style="{StaticResource btn}" Template="{StaticResource btnTemplate}"/>
                </Grid>
                
                <views:PlayerInput Grid.Row="1" VerticalAlignment="Top"/>
            </Grid>
            
        </Border>
    </Border>


</Window>
